<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    android:padding="@dimen/dimen_16dp"
    android:layout_marginTop="@dimen/dimen_16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/med_icon_text"
            android:layout_width="@dimen/med_item_size"
            android:layout_height="@dimen/med_item_size"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/circle_text_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            tools:text="P" />

        <TextView
            android:id="@+id/med_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_toEndOf="@id/med_icon_text"
            android:layout_toRightOf="@id/med_icon_text"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Antibiotics Medication" />

        <TextView
            android:id="@+id/med_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/med_name"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_toEndOf="@id/med_icon_text"
            android:layout_toRightOf="@id/med_icon_text"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="15sp"
            tools:text="@string/med_desc" />

        <TextView
            android:id="@+id/med_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/med_desc"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_toEndOf="@id/med_icon_text"
            android:layout_toRightOf="@id/med_icon_text"
            android:drawableLeft="@drawable/ic_access_time_black"
            android:drawableStart="@drawable/ic_access_time_black"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:lines="1"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:textSize="15sp"
            tools:text="Every 12 hours" />

    </RelativeLayout>
</android.support.v7.widget.CardView>